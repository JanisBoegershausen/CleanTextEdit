<Window x:Class="CleanTextEdit.ContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanTextEdit"
        mc:Ignorable="d"
        Title="ContextWindow" Height="400" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip" Topmost="True" Deactivated="Window_Deactivated">
    <Grid>
        <Rectangle Fill="Black" Opacity="0.5"></Rectangle>
        <ListBox Background="Transparent">
            <Label Foreground="White" Width="185" FontSize="15" MouseDown="Save_MouseDown">Save...</Label>
            <Label Foreground="White" Width="185" FontSize="15" MouseDown="SaveAs_MouseDown">Save As...</Label>
            <Label Foreground="White" Width="185" FontSize="15" MouseDown="Load_MouseDown">Load...</Label>
            <Label Foreground="White" Width="185" FontSize="15" MouseDown="Close_MouseDown">Close</Label>
        </ListBox>
    </Grid>
</Window>
